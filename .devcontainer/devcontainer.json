{
    "name": "CodeIgniter 4 Development (PHP-FPM)",
    "dockerComposeFile": [
        "../docker-compose.yml" 
    ],
    "service": "app", 
    "workspaceFolder": "/var/www/html/builder", 

    "extensions": [
        "bmewburn.vscode-intelephense-client",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
    ],

    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    
    // コンテナ起動後に実行するコマンド（例: Composerの依存関係をチェックするなど）
    "postCreateCommand": "composer install || true"
}